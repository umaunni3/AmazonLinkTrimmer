{
    "name": "Amazon Link Trimmer",
    "version": "1.0",
    "description": "Remove the tracking junk from an amazon product link in one click!!",
    "permissions": ["storage", 
                    "activeTab", 
                    "clipboardWrite", 
                    "tabs",
                    "declarativeContent"],
    "background": {
	    "scripts": ["background.js", "trimmer.js"],
	    "persistent": false
    },
    "browser_action": {
        "default_icon": {
		"16": "images/icons/greenbasket16.png",
		"32": "images/icons/greenbasket32.png",
        "128": "images/icons/greenbasket128.png"		
	    }
    },
    "icons": {
	    "16": "images/icons/greenbasket16.png",
	    "32": "images/icons/greenbasket32.png",
	    "128": "images/icons/greenbasket128.png"
    },
    "manifest_version": 2
  }
